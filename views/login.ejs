<div class="col-md-6 col-sm-6 create-new-account">
	<h4 class="checkout-subtitle">Create a new account</h4>

	<% if(messages.signupError) { %>
		<span class="text-red-500 text-sm"><%= messages.signupError %></span>
		<% }else{ %>
			<p class="text title-tag-line">Create your new account.</p>
		<% } %>
	<form class="register-form outer-top-xs" role="form" method="post" action="/signup" id="signup-form" onsubmit="return validateForm()">
		<div class="form-group">
			<label class="info-title" for="exampleInputEmail2" >Username <span>*</span></label>
			<input type="text" class="form-control unicase-form-control text-input" id="exampleInputEmail2" name="usernameSignUp" required>
		</div>
		<div class="form-group">
			<label class="info-title" for="exampleInputEmail1">Name <span>*</span></label>
			<input type="text" class="form-control unicase-form-control text-input" id="exampleInputName" name="name" value="<%= messages.name  %>" required>
		</div>
		<div class="form-group">
			<label class="info-title" for="exampleInputPhoneNumber">Phone Number <span>*</span></label>
			<input type="text" class="form-control unicase-form-control text-input" id="exampleInputPhoneNumber" name="phoneNumber" value="<%= messages.phone_number  %>" required>
		</div>
		<div class="form-group">
			<label class="info-title" for="exampleInputPassword">Password <span>*</span></label>
			<input type="password" class="form-control unicase-form-control text-input" id="exampleInputPassword" name="passwordSignUp" required> 
		</div>
		<div class="form-group">
			<label class="info-title" for="exampleInputConfirmPassword">Confirm Password <span>*</span></label>
			<input type="password" class="form-control unicase-form-control text-input" id="exampleInputConfirmPassword" name="passwordConfirm" required>
		</div>
	
		<!-- Thêm thẻ div cho hiển thị thông báo lỗi -->
		<div id="error-message" style="color: red;"></div>
	
		<button type="submit" class="btn-upper btn btn-primary checkout-page-button">Sign Up</button>
	</form>
	
	<script>
		function validateForm() {
			var errorMessageElement = document.getElementById("error-message");
			errorMessageElement.innerText = ""; // Đặt lại thông báo trước khi kiểm tra
	
			var password = document.getElementById("signup-form")["passwordSignUp"].value;
			var confirmPassword = document.getElementById("signup-form")["passwordConfirm"].value;
	
			// Kiểm tra xem các trường có được điền đầy đủ hay không
			if (!document.getElementById("signup-form")["username"].value ||
				!document.getElementById("signup-form")["name"].value ||
				!document.getElementById("signup-form")["phoneNumber"].value ||
				!password ||
				!confirmPassword) {
				errorMessageElement.innerText = "Vui lòng điền đầy đủ thông tin.";
				return false; // Ngăn form được gửi nếu có lỗi
			}
	
			// Kiểm tra xác nhận mật khẩu
			if (password !== confirmPassword) {
				errorMessageElement.innerText = "Xác nhận mật khẩu không khớp với mật khẩu.";
				return false; // Ngăn form được gửi nếu mật khẩu không khớp
			}
		}
	</script>
	
	
	
	
	
